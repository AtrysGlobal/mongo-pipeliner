  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "__test__"],
}
